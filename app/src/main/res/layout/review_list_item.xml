<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingBottom="@dimen/list_item_padding_vertical"
    android:paddingLeft="@dimen/list_item_padding_horizontal"
    android:paddingRight="@dimen/list_item_padding_horizontal"
    android:paddingTop="@dimen/list_item_padding_vertical">

    <TextView
        android:id="@+id/tv_review_author"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_item_name_end_margin"
        android:layout_marginRight="@dimen/list_item_name_right_margin"
        android:layout_marginStart="@dimen/list_item_name_start_margin"
        android:layout_marginLeft="@dimen/list_item_name_left_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/list_item_name_end_margin"
        android:layout_marginRight="@dimen/list_item_name_right_margin"
        android:layout_marginTop="@dimen/list_item_name_top_margin"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_review_author"
        app:layout_constraintTop_toBottomOf="@+id/tv_review_author" />

</android.support.constraint.ConstraintLayout>